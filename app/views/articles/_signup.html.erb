<%= form_for :password, url: passwords_path do |form| %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <div class="links">
    <%= link_to t(".sign_in"), new_session_path,
        onclick: 'login("login-form", "signup-form")', remote: true %>
  </div>

<% end %>
