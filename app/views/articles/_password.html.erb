<%= form_for :password_reset,
             url: users_password_path(@user, token: @user.password_reset_token),
             html: { method: :put } do |form| %>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>

<% end %>
