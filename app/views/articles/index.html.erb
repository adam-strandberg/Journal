<div id="container">

  <div id="articles-and-form-container">

    <div id="header">
        <%= link_to 'JOURNAL', articles_path %>
    </div>

    <div id="form">
      <% if logged_in? && @articles.current_page == 1 %>
        <%= render partial: 'form', locals: { remote: false } %>
      <% end %>
    </div>

    <div id="articles">
      <%= render @articles %>
    </div>

    <%= will_paginate @articles %>

  </div>

  <div id="archive-and-tags-container">

    <div id="archive">
      <%= render partial: 'articles/archive' %>
    </div>

    <div id="tag-box">
      <%= render partial: 'articles/tags' %>
    </div>

  </div>

  <div class="clear"></div>

  <div id="overlay"></div>

  <div id="login-form">
    <%= render partial: 'articles/login' %>
  </div>

</div>
