<div id="container">

  <div id="articles-and-form-container" data-tag="<%= @tag.name %>">

    <div id="header">
        <%= link_to 'JOURNAL', articles_path %>
    </div>

    <div class="archive-view-header">
      <%= "Articles tagged with: #{@tag.name}" %>
    </div>

    <div id="articles">
      <%= render @articles %>
    </div>

    <%= will_paginate @articles %>

  </div>

  <div id="archive-and-tags-container">

    <div id="archive">
      <%= render partial: 'articles/archive' %>
    </div>

    <div id="tag-box">
      <%= render partial: 'articles/tags' %>
    </div>

  </div>

  <div class="clear"></div>

  <div id="overlay"></div>

  <div id="login-form">
    <%= render partial: 'articles/login' %>
  </div>

</div>
